<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/item_chapter_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/item_chapter_playnumber_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/item_chapter_name_tv"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/item_chapter_playnumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/item_chapter_name_tv"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/item_chapter_playnumber_iv"
        android:gravity="center_vertical"
        android:maxLength="10"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/item_chapter_duration_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/item_chapter_name_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_chapter_playnumber_tv"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/item_chapter_duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/item_chapter_name_tv"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/item_chapter_duration_iv"
        android:gravity="center_vertical"
        android:maxLength="10"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/item_chapter_size_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/item_chapter_name_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_chapter_duration_tv"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/item_chapter_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/item_chapter_name_tv"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/item_chapter_size_iv"
        android:gravity="center_vertical"
        android:maxLength="10"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/item_chapter_download_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>